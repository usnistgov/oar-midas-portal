{
    "name": "midas-portal",
    "workspaces": [
        "lib",
        "midas-portal"
    ],
    "scripts": {
        "build-lib": "npm run build oarng --prefix ./lib",
        "build-all": "npm run build oarng --prefix ./lib && npm run build midas-portal --prefix ./midas-portal",
        "build": "npm run build midas-portal --prefix ./midas-portal",
        "start": "npm run start midas-portal --prefix ./midas-portal",
        "test": "jest --config ./midas-portal/jest.config.js --silent"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^18.2.12",
        "@angular/cli": "^18.2.12",
        "@angular/compiler": "^18.2.13",
        "@angular/compiler-cli": "^18.2.13",
        "@types/jasmine": "^5.1.9",
        "@types/jest": "^29.5.0",
        "jest": "^29.5.0",
        "jest-preset-angular": "^14.5.0",
        "ng-packagr": "^18.2.1",
        "ts-jest": "^29.1.0",
        "typescript": "~5.4.5"
    }
}
